<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/noteListFragment">

    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.atila.notesjournal.ui.fragment.NoteListFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_note_list">
        <action
            android:id="@+id/action_noteList_to_noteEdit"
            app:destination="@id/noteEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/noteEditFragment"
        android:name="com.atila.notesjournal.ui.fragment.NoteEditFragment"
        android:label="Edit Note"
        tools:layout="@layout/fragment_note_edit">
        <argument
            android:name="noteId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

</navigation>
